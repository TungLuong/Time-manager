<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_toLeftOf="@id/iv_notification"/>
    <TextView
        android:id="@+id/tv_time_start"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:text="Time Start:"/>
    <TextView
        android:id="@+id/tv_set_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_alignRight="@id/tv_time_start"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Finish:"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_time_start"
        android:id="@+id/tv_time_finish"/>
    <TextView
        android:id="@+id/tv_set_time_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_set_time_start"
        android:layout_alignRight="@id/tv_time_finish"/>
    <Button
        android:id="@+id/btn_latter"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_set_time_finish"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:text="Latter"
        />
    <Button
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:text="Start"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:id="@+id/btn_start"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:background="@drawable/background_button"
        android:layout_below="@id/tv_set_time_finish"
        android:layout_toLeftOf="@id/btn_latter"/>
    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="48dp"
        android:src="@drawable/icon_notification"
        android:layout_height="48dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>