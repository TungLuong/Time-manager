<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <tl.com.timemanager.CustomView.ActionStatisticsView
        android:id="@+id/action_statistics_view"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/background_free_time"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Hoạt động tự do"
            android:textColor="#000"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_action_done_1"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="0/0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/background_action_outside"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Hoạt động bên ngoài"
            android:textColor="#000"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_action_done_2"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="0/0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/background_action_at_home"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Hoạt động tại nhà"
            android:textColor="#000"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_action_done_3"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="0/0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/background_action_entertainment"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Hoạt động giải trí"
            android:textColor="#000"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_action_done_4"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="0/0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/background_action_relax"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Hoạt động nghỉ ngơi"
            android:textColor="#000"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_action_done_5"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="0/0"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_open_calendar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_date_range_white_24dp" />


</LinearLayout>